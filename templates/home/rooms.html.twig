{% extends 'base.html.twig' %}

{% block title %}Rooms{% endblock %}

{% block body %}

    <div class="container-fluid">
        <div class="row">
            <div class="col-xs-12 col-md-12 col-lg-12 p-0">
                <div class="flex-center pageTop">
                    <div class="container text-center text-wrap text-white">
                        <h1 class="myFont" style="font-size: 3.8rem">SEARCH</h1>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="info form-holder no-margin p-0">
        <div class="container">
            <div class="row">
                <div class="booking-form shadow-lg">
                    {{ form_start(form , {'methode':'POST'}) }}
                    <div class="row no-margin">
                        <div class="col-md-3 bg-light">
                            <div class="form-group">
                                <span class="form-label">Destination</span>
                                {{ form_widget(form.destination, {'attr':{'class':'form-control', 'placeholder':"Region, City or Hotel." }}) }}
                            </div>
                        </div>
                        <div class="col-md-6 bg-light">
                            <div class="row no-margin ">
                                <div class="col-md-5">
                                    <div class="form-group">
                                        <span class="form-label">Check In</span>
                                        {{ form_widget(form.checkin, {'attr':{'class':'form-control'}}) }}
                                    </div>
                                </div>
                                <div class="col-md-5">
                                    <div class="form-group">
                                        <span class="form-label">Check out</span>
                                        {{ form_widget(form.checkout, {'attr':{'class':'form-control'}}) }}
                                    </div>
                                </div>
                                <div class="col-md-2">
                                    <div class="form-group">
                                        <span class="form-label">Guests</span>
                                        {{ form_widget(form.guests, {'attr':{'class':'form-control'}}) }}
                                        <span class="select-arrow"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3 bg-light">
                            <div class="form-btn">
                                <button class="submit-btn">Check availability</button>
                            </div>
                        </div>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>

    <section class="filter">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <h1 class="myFont color">Filter By :</h1>
                </div>
            </div>
        </div>
        <div class="container">
            <div class="row pt-3">
                <div class="col-sm-12 col-md-6 col-lg-3 text-center">
                    <h4 class="my-2">Star Rating <span class="fa fa-star-o"></span></h4>
                    <select class="text-center" style="width: 93%;" name="" id="">
                        <option value="1">&star;</option>
                        <option value="2">&star;&star;</option>
                        <option value="3">&star;&star;&star;</option>
                        <option value="4">&star;&star;&star;&star;</option>
                        <option value="5">&star;&star;&star;&star;&star;</option>
                        <option value="all">Any</option>
                    </select>
                </div>
                <div class="col-sm-12 col-md-6 col-lg-3 text-center">
                    <h4 class="my-2">Room Type <span class="fa fa-home"></span></h4>
                    <select class="text-center" style="width: 93%;" name="" id="">
                        <option value="1">Luxuary room</option>
                        <option value="2">Delux room</option>
                        <option value="3">Executive room</option>
                        <option value="4">Samll Rooms</option>
                        <option value="all">Any</option>
                    </select>
                </div>
                <div class="col-sm-12 col-md-6 col-lg-3 text-center">
                    <h4 class="my-2">Distance <span class="fa fa-map-marker"></span></h4>
                    <select class="text-center" style="width: 93%;" name="" id="">
                        <option value="0">City Center</option>
                        <option value="1">Less than 1 Km from center</option>
                        <option value="3">Less than 3 Km from center</option>
                        <option value="5">Less than 5 Km from center</option>
                        <option value="all">Any</option>
                    </select>
                </div>
                <div class="col-sm-12 col-md-6 col-lg-3 text-center">
                    <h4 class="my-2">Price <span class="fa fa-tags"></span></h4>
                    <select class="text-center" style="width: 93%;" name="" id="">
                        <option value="100">Less than $100</option>
                        <option value="500">Less than $500</option>
                        <option value="2000">Less than $2000</option>
                        <option value="all">Any</option>
                    </select>
                </div>
            </div>
        </div>
        <br>
        <hr width="60%">
        <br>
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <h1 class="myFont color">Search Result :</h1>
                </div>
            </div>
        </div>
    </section>

    <section>
        <div class="container">
            <div class="row">
                {% if rooms is empty %}
                    <div class="col-12 my-5">
                        <div class="alert alert-warning text-center" role="alert">
                            <h6 class="m-3">No Room Available ! </h6>
                        </div>
                    </div>
                {% else %}
                    {% for room in rooms %}

                        <div class="col-lg-4 col-sm-6 p-auto my-4">
                            <div class="card shadow-sm" style="width: 100%;">
                                <img src="{{ asset('uploads/imgs/' ~ room.image) }}" width="100%" height="230px" class="card-img-top" alt="Room Img">
                                <div class="card-body">
                                    <h5 class="card-title">Hotel {{ room.hotel.nom }}</h5>
                                    <ul class="list-unstyled list-inline">
                                        {% for i in 1..room.hotel.nbrEtoiles %}
                                            <li class="list-inline-item"><span class="fa fa-star-o" style="color: goldenrod;"></span></li>
                                        {% endfor %}
                                    </ul>

                                    <p class="card-text">
                                        <button class="btn btn-outline-light shadow-sm text-dark" type="button" data-toggle="collapse" data-target="#description{{ room.id }}" aria-expanded="false" aria-controls="description{{ room.id }}">
                                            Read Description <span class="fa fa-arrow-down"></span>
                                        </button>
                                    </p>
                                    <div class="collapse pb-2" id="description{{ room.id }}">
                                        <div class="card card-body">
                                            {{ room.description }}
                                        </div>
                                    </div>
                                    <p class="card-text py-2">
                                        <span class="fa fa-map-marker ml-1 mr-3"></span> {{ room.Hotel.DistanceCentre }} Km from
                                        {{ room.Hotel.ville }}
                                    </p>
                                </div>
                                <ul class="list-group list-group-flush">
                                    <li class="list-group-item">
                                        Type : {{ room.categorie }}
                                    </li>
                                    <li class="list-group-item">
                                        Price : {{ room.prixSaison.prix *  room.prixSaison.taux }} <span class="fa fa-dollar"></span> / Night
                                    </li>
                                    <li class="list-group-item">
                                        <ul class="list-unstyled list-inline">
                                            <li class="list-inline-item">Capacity : </li>
                                            {% for i in 1..room.Capacity() %}
                                                <li class="list-inline-item m-0"><span class="fa fa-male"></span></li>
                                            {% endfor %}
                                        </ul>
                                    </li>
                                </ul>
                                <div class="card-body text-center">
                                    <a href="{{ url('roomDetails', {'id': room.id }) }}" class="btn color2 text-light w-100">Show Room</a>
                                </div>
                            </div>
                        </div>

                    {% endfor %}
                {% endif %}

            </div>
        </div>
    </section>

{% endblock %}