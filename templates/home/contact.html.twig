{% extends 'base.html.twig' %}

{% block title %}Contact us{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-xs-12 col-md-12 col-lg-12 p-0">
                <div class="flex-center pageTop">
                    <div class="container text-center text-wrap text-white">
                        <h1 class="myFont" style="font-size: 4rem">Contact Us</h1>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <section class="py-2 px-0">
        <div class="container-fluid py-5 text-center px-0" style="width: 90%">
            <div class="row px-0">
                <div class="col-lg-12">
                    <div id="map" style="width: 100%;height: 600px"></div>
                </div>
                <div class="col-lg-12">
                    <hr class="color2" style="width: 50%; height: 0.2rem;">
                    <hr width="20%">
                </div>
            </div>
        </div>
    </section>

    <section class="container">
        <div class="row">
            <div class="col-12 text-center p-4">
                <h1 class="py-5 myFont color">Drop us a message</h1>
            </div>
            <div class="col-12 container-fluid">
                    <form id="contactform" action="">
                        <div class="row">
                            <div class="col-xs-12 col-md-6">
                                <div class="group">
                                    <input type="text" required>
                                    <span class="highlight"></span>
                                    <span class="bar"></span>
                                    <label>Name</label>
                                </div>
                            </div>
                            <div class="col-xs-12 col-md-6">
                                <div class="group">
                                    <input type="text" required>
                                    <span class="highlight"></span>
                                    <span class="bar"></span>
                                    <label>Email</label>
                                </div>
                            </div>
                        </div>
                        <div class="row ">
                            <div class="col-12 mb-0 group">
                                <div class="group">
                                    <input type="text" required>
                                    <span class="highlight"></span>
                                    <span class="bar"></span>
                                    <label>Topic</label>
                                </div>
                            </div>
                        </div>
                        <div class="row mt-0">
                            <div class="col-12 group">
                                <textarea name="" id="" rows="5" placeholder="Message"></textarea>
                                <span class="highlight"></span>
                                <span class="bar"></span>
                            </div>
                        </div>
                        <div class="form-row text-center">
                            <div class="col">
                                <button class="btn btn-md w-50 color2 text-light">Send</button>
                            </div>
                        </div>
                    </form>
            </div>
            <div class="col-lg-12">
                <hr class="color2" style="width: 50%; height: 0.2rem;">
                <hr width="20%">
            </div>
        </div>
    </section>
{% endblock %}

{% block js %}
    <script async src="https://maps.googleapis.com/maps/api/js?key=&callback=initMap&libraries=&v=weekly" defer>
    </script>
    <script>
        (function (exports) {
            "use strict";

            function initMap() {
                exports.map = new google.maps.Map(document.getElementById("map"), {
                    center: {
                        lat: 31.6328892,
                        lng: -8.008825
                    },
                    zoom: 15
                });
            }

            exports.initMap = initMap;
        })
        ((this.window = this.window || {}));
    </script>
{% endblock %}