{% extends 'base.html.twig' %}

{% block title %}Chambre index{% endblock %}

{% block body %}
    <h1>Chambre index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Numero</th>
                <th>Etage</th>
                <th>Categorie</th>
                <th>Superficie</th>
                <th>Capacity</th>
                <th>Image</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for chambre in chambres %}
            <tr>
                <td>{{ chambre.id }}</td>
                <td>{{ chambre.numero }}</td>
                <td>{{ chambre.etage }}</td>
                <td>{{ chambre.categorie }}</td>
                <td>{{ chambre.superficie }}</td>
                <td>{{ chambre.capacity }}</td>
                <td>{{ chambre.image }}</td>
                <td>
                    <a href="{{ path('chambre_show', {'id': chambre.id}) }}">show</a>
                    <a href="{{ path('chambre_edit', {'id': chambre.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('chambre_new') }}">Create new</a>
{% endblock %}
